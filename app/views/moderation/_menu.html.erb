<nav class="admin-sidebar">
  <ul id="moderation_menu">
    <li>
      <%= link_to t("moderation.dashboard.index.title"), moderation_root_path %>
    </li>

    <% if can? :moderate, Proposal %>
      <li <%= "class=active" if controller_name == "proposals" %>>
        <%= link_to moderation_proposals_path do %>
          <i class="icon-proposals"></i>
          <%= t("moderation.menu.proposals") %>
        <% end %>
      </li>
    <% end %>

    <% if feature?(:debates) && can?(:moderate, Debate) %>
      <li <%= "class=active" if controller_name == "debates" %>>
        <%= link_to moderation_debates_path do %>
          <i class="icon-debates"></i>
          <%= t('moderation.menu.flagged_debates') %>
        <% end %>
      </li>
    <% end %>

    <% if can? :moderate, Comment %>
      <li <%= "class=active" if controller_name == "comments" %>>
        <%= link_to moderation_comments_path do %>
          <i class="icon-comments"></i>
          <%= t("moderation.menu.flagged_comments") %>
        <% end %>
      </li>
    <% end %>

    <% if can? :moderate, User %>
      <li <%= "class=active" if controller_name == "users" %>>
        <%= link_to moderation_users_path do %>
          <i class="icon-user"></i>
          <%= t("moderation.menu.users") %>
        <% end %>
      </li>
    <% end %>

    <% if can? :moderate, Meeting %>
      <li <%= "class=active" if controller_name == "meetings" %>>
        <%= link_to moderation_meetings_path do %>
          <i class="icon-calendar"></i>
          <%= t("moderation.menu.meetings") %>
        <% end %>
      </li>
    <% end %>

    <% if can? :moderate, ActionPlan %>
      <li <%= "class=active" if controller_name == "actions" %>>
        <%= link_to moderation_action_plans_path do %>
          <i class="icon-document"></i>
          <%= t("moderation.menu.actions") %>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>
