<h2><%= t("moderation.action_plans.index.title") %></h2>

<%= render 'shared/filter_subnav', i18n_namespace: "moderation.action_plans.index" %>

<div class="row">
  <h3 class="small-8 large-8 columns"><%= page_entries_info @resources %></h3>
  <div class="small-4 large-4 columns">
    <div class="right">
      <%= t("moderation.action_plans.index.order") %>
      <%= render 'shared/order_selector', i18n_namespace: "moderation.action_plans.index" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="right">
    <%= link_to t("action_plans.index.new"), new_moderation_action_plan_path, class: 'button radius expand' %>
  </div>
</div>

<table class="clear">
  <tr>
    <th>
      <%= t("moderation.action_plans.index.headers.action") %>
    </th>
  </tr>
  <% @resources.each do |action| %>
    <tr id="<%= dom_id(action) %>">
      <td>
        <%= link_to action.title, action, target: "_blank" %>
        <div class="action-description">
          <%= action.description %>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @resources %>
